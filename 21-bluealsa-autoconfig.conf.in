# these may be redefined by the user
defaults.bluealsa.default.profile defaults.bluealsa.profile
defaults.bluealsa.default.stream duplex
defaults.bluealsa.default.pcm.fallback pcm.sysdefault
defaults.bluealsa.default.pcm.description "Default PCM device (currently BlueALSA)"
defaults.bluealsa.default.pcm.fallback_description "Default PCM device"
defaults.bluealsa.default.ctl.fallback ctl.sysdefault
defaults.bluealsa.default.ctl.description "Default control device (currently BlueALSA)"
defaults.bluealsa.default.ctl.fallback_description "Default control device"

pcm.bluealsa.hint.!show {
	@func refer
	name {
		@func concat
		strings [ "bluealsa.autoconfig.pcm.hint." $PROFILE ".show" ]
	}
	default off
}

ctl.bluealsa.hint.!show {
	@func refer
	name {
		@func concat
		strings [ "bluealsa.autoconfig.ctl.hint.show" ]
	}
	default off
}

# load autoconfig default device definitions only on demand
bluealsa.autoconfig.@hooks [
	{
		func load
		files [ "@CONFDIR@/default-devices.conf" ]
		errors true
	}
]
